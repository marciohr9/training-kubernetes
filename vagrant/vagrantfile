Vagrant.configure("2") do |config|

    config.vm.box = "ubuntu/focal64"

    config.vm.provider "virtualbox" do |v|
    v.memory = 1024
    
    end
    # máquina 1
    config.vm.define "k8s-manager" do |m|
    m.vm.network "private_network", ip: "192.168.56.5"
    end
    # máquina 2
    config.vm.define "k8s-worker1" do |m|
    m.vm.network "private_network", ip: "192.168.56.6"
    end

    # máquina 3
    config.vm.define "k8s-worker2" do |m|
    m.vm.network "private_network", ip: "192.168.56.7"
    end

end
